    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Quartz",
            "request": "launch",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "quartz",
                "build",
                "--serve"
            ],
            "type": "node",
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "Local: http://localhost:([0-9]+)",
                "uriFormat": "http://localhost:%s"
            }
        },
    ],
}